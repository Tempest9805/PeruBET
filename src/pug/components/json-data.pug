mixin card(cardImage, cardTitle, cardSource, cardLive)
	article(class='card class-item')
		div(class='img-container s-ratio-16-9 s-radius-tr s-radius-tl')
			img(src=cardImage)
		div(class='card__data s-border s-radius-br s-radius-bl s-pxy-2')
			div(class='t5 s-mb-2 s-center')=cardTitle
			div(class='s-justify')
				a(href=cardSource target='_blank' class='button--ghost-alert button--tiny') Site 1
				a(href=cardLive target='_blank' class='button--ghost-alert button--tiny') Site 2


